.porder_item_input {
    width: 100%;
    overflow: hidden;
    .porder_item_input-label {
    	width: 60%;
    	float: left;
    	text-align: right;
    	padding-top: 8px;
    	padding-right: 6px;
    	font-style: italic;
    }
    .porder_item_input-field{
    	width: 40%;
    	float: left;    
    	input {
    		background-color: #cdcdcd;
    	}	
    }
}

.porder_grid {
    padding-top: 10px;
    padding-bottom: 10px;
    margin-bottom: 10px;
    border-top: 1px solid #129cdd;
    border-bottom: 1px solid #129cdd;
    .porder_grid-row {
        .title {
            font-weight: bold;
        }
        .remove {
            padding-top: 24px;
        }
        .field {
            margin-bottom: 10px;
        }
    }
}
