  }
  .logo-block-phone {
    // width: 460px;
    // height: 180px;
    background: no-repeat;
    background-image: url(<%= asset_path 'phone.png' %>); 
    background-size:100% auto;
    .tel {
      margin-top: 4px;
      margin-left: 150px;
      color: white;
    }
    .hot-line {
      margin-left: 150px;
      color: white;
      font-weight: bold;
    }
    .work-time {
      color: #231F20;
      font-size: 12px;
      margin-top: 6px;
    }
  }
}

