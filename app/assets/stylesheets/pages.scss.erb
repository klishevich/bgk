.nav-top {
  background-color: transparent; 
  border-color: transparent;
  font-family: "CenturyGothic";
  .hidden-xs{
    // width: 1024px;
    .nav-wrapper {
      font-size: 14px;
      margin-left: 240px;
      // overflow: hidden;
      width: 580px;
      border-bottom: 1px solid;
      border-color: #005D8F;
      float: left;
      .nav-wrapper-inner{
        // overflow: hidden;
        width: 560px;
        margin: 0px auto;
        height: 34px;
        .navbar-nav>li {
          + li:before{
            content: "|";
            margin-top: 11px;
            float: left;
            color: #005D8F;
          }
          a {
            display: block;
            white-space: nowrap;
            margin-left: 2px;
            padding: 10px 5px;
            color: #005D8F;
            &:hover {
              text-decoration: underline;
            }
          }
        }
      }
    }
    .download-file {
      font-size: 12px;
      overflow: hidden;
      float: right;
      .download-file-icon {
        margin-top: 8px;
        width: 30px;
        height: 30px;
        float: left;
        background-repeat: no-repeat;
        background-image: url(<%= asset_path 'download_arrow_bottom.png' %>);
        background-position: center center;
      }
      a {
        padding-top: 12px;
        float: left;
        color: #231F20;
      }

    }
  }
}

