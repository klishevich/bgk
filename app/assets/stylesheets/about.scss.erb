.about1 {
	background-image: url(<%= asset_path 'fon1.jpg' %>);
    padding-bottom: 10px;
    padding-top: 20px;
    padding-left: 30px;
    padding-right: 30px;
    .about1-text-title {
    	font-style: italic;
        font-weight: bold;
    	color: #006A9C;
    	font-size: 20px;
    	margin-bottom: 10px;
    }
    .about1-text-info {
    	text-align: justify;
    }
    .about1-text-cont {
    	font-style: italic;
        font-weight: bold;
    	color: #006A9C;
    	margin-top: 20px;
    	margin-bottom: 5px;
    	font-size: 16px;
    }
    .about1-text-tel {
    	margin-bottom: 20px;
    }
    .about1-text-signature {
        font-style: italic;
    	width: 100%;
    	text-align: right;
    }
    .about1-text-signature2 {
        font-style: italic;
        width: 100%;
        text-align: right;
        margin-bottom: 10px;
    }
    .border {
        border-top: 2px solid;
        border-color: grey;
    }
}