.homepage1 {
  background-image: url(<%= asset_path 'fon1.jpg' %>);
  background-position: center;
  font-family: "CenturyGothic";
  font-weight: bold;
  padding-top: 30px;
  padding-bottom: 30px;
  .row {
      width: 80%;
      margin-left: 10%;
    .col-md-3 {
      margin-top: 30px;
      .homepage1-catalog {
        padding: 6px 6px 6px 6px;
        background: white;
        border-radius: 5px;
        img{
          margin: 0px auto;
        }
        div{
          color: #1174a2;
          margin-top: 6px;
          text-align: center;
          min-height: 40px;
        }
        .divpadtop10 {
          padding-top: 10px;
        }
      }
      .homepage1-shade img {
        width: 100%;
      }
    }
  }
}

.homepage2 {
  background-image: url(<%= asset_path 'fon2.jpg' %>);
  background-position: center top;
  font-family: "CenturyGothic";
  h2 {
    text-align: center;
    padding-top: 20px;
    padding-bottom: 20px;
    color: #005d8F;
    font-weight: bold;
  }
  .homepage2-img {
    img{
      width: 100%;
    }
  }
  .podrobnee {
    text-align: right;
    a {
      text-decoration: underline;
      color: black;
      font-weight: bold;
      margin-right: 15px;
    }
  }
  .homepage2-info {
    padding: 20px 20px 20px 30px;
    text-align: justify;
  }
  .homepage2-zakaz {
    padding: 20px 20px 20px 20px;
    .zakaz-zvonok-btn {
      margin: 0 auto;
    }
  }
}

.homepage3 {
  font-family: "CenturyGothic";
  margin-top: 20px;
  margin-bottom: 10px;
  .row {
    .homepage3-container {
      position: relative;
      .homepage3-img {
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
      }
      .homepage3-title {
        font-size: 40px;
        font-weight: bold;
        color: #5dcef8;
        position: absolute;
        top: 30px;
        left: 45px;
        z-index: 10;
      }
    }
  }
}

.homepage4 {
  font-family: "CenturyGothic";
  padding-left: 30px;
  padding-right: 30px;
  .homepage4-info {
    margin-top: 10px;
    text-align: justify;
  }
  .homepage4-lists {
    margin-top: 10px;
    .homepage4-list1 {
      font-weight: bold;
      font-style: italic;
      position: relative;
    }
  }
}