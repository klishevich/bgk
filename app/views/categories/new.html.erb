<% provide(:breadcrumb, "Админка / Создание категории") %>
<h2>Создание страницы</h2>
<div>
	<div class="form-group">
		<a class="btn btn-default" href="/admin">В админку</a>
		<%= link_to "Список категорий", categories_path, class: "btn btn-default" %>
	</div>
	<div class="form-cont">
		<%= simple_form_for(@category) do |f| %>
		  <%= f.input :name %>
		  <%= f.input :order %>
		  <div class="form-group">
		    <%= f.button :submit, value: "Сохранить", class: "btn btn-primary" %>
		  </div>
		<% end %>
	</div>
</div>

