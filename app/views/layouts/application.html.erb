<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : t(:default_title) %></title>	
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : t(:default_title) %>">
  <meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) : t(:default_title) %>">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<%= render 'layouts/navigation' %>
	<%= render 'layouts/messages' %>
	<%= yield %>
</div>
</body>
</html>
