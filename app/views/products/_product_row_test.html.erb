<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.title %></small></h4>
    </div>
    <div class="col-xs-4">
    <%= simple_form_for porder_item, remote: true do |f| %>
      <%= f.input :quantity, input_html: {value: '1'} %>
      <%= f.hidden_field :product_id, value: product.id %>
      <div class="form-group">
        <%= f.button :submit, value: "Сохранить", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>