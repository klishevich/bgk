<div class="bgk_container">
	<div class="form-group">
		<a class="btn btn-default" href="/admin">В админку</a>
		<%= link_to "Список страниц", products_path, class: "btn btn-default" %>
	</div>
	<div class="form-cont">
		<%= simple_form_for(@product, html: { class: 'form-horizontal' }) do |f| %>
		  <%= f.input :title %>
		  <%= f.input :subtitle %>
		  <%= f.input :category_id, collection: Category.order(:order).all, label_method: :name, value_method: :id %>
		  <%= f.input :prop1 %>
		  <%= f.input :prop2 %>
		  <%= f.input :prop3 %>
		  <%= f.input :prop4 %>
		  <%= f.input :prop5 %>
		  <%= f.input :prop6 %>
		  <%= f.input :desc_col1, :input_html => {:rows => 10 } %>
		  <%= f.input :desc_col2, :input_html => {:rows => 10 } %>
		  <%= f.input :desc_full, :input_html => {:rows => 10 } %>
		  <%= render 'edit_productimg', f: f %>
		  <div class="form-group">
		    <%= f.button :submit, value: "Сохранить", class: "btn btn-primary" %>
		  </div>
		<% end %>
	</div>
</div>